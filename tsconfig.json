{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./build",
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "*": [
            "node_modules/*"
        ]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "test/**/*.ts"
    ]
}